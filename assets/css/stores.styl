.store
  overflow hidden

.store > div
  float left

.store > .info
  clear left
  min-width 120px
  width 40%
  margin-bottom 10px

.store > .ratings
  clear right
  width 60%
  min-width 230px

.store > div > table, .store > div > p
  margin 5px 5px 0 5px

.store > div > table th, .store > div > table td
  padding-bottom 5px

.store > div > table th
  padding-right 10px
  font-weight normal

.store > div > table .average > th
  font-weight bold
